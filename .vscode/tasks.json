{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "_root: run current-file",
      "type": "shell",
      "command": ". .env && sst shell -- tsx -r tsconfig-paths/register ${file}",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": { "reveal": "never", "focus": false, "panel": "shared", "group": "root" }
    },
    {
      "label": "_root: test current-file",
      "type": "shell",
      "command": ". .env && sst shell -- vitest run ${file}",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": { "reveal": "never", "focus": false, "panel": "shared", "group": "root" }
    },
    {
      "label": "_root: test current-file/selected-test",
      "type": "shell",
      "command": ". .env && sst shell -- vitest run ${file} --testNamePattern='${selectedText}'",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": { "reveal": "never", "focus": false, "panel": "shared", "group": "root" }
    },
    {
      "label": "root: sst dev",
      "type": "shell",
      "command": ". .env && sst unlock && sst dev --print-logs",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": { "reveal": "never", "focus": false, "panel": "shared", "group": "sst" }
    },
    {
      "label": "root: sst deploy prod",
      "type": "shell",
      "command": ". .env && sst unlock && sst deploy --stage prod --print-logs",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": { "reveal": "never", "focus": false, "panel": "shared", "group": "sst" }
    },
    {
      "label": "task: opensearch-generate-event",
      "type": "shell",
      "command": ". .env && tsx -r tsconfig-paths/register task/opensearch-generate-event.ts",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": { "reveal": "never", "focus": false, "panel": "shared", "group": "task" }
    },
    {
      "label": "task: prod-post-publisher-step-function-invoke",
      "type": "shell",
      "command": ". .env && tsx -r tsconfig-paths/register task/prod-post-publisher-step-function-invoke.ts",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": { "reveal": "never", "focus": false, "panel": "shared", "group": "task" }
    }
  ]
}
